{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Make",
			"command": "make",
			"args": ["-s"],
			"group": {
				"kind": "build"
			},
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": "$gcc"
		},
		{
			"label": "Make (skip graphics & sound)",
			"command": "make",
			"args": ["-s", "skip-gs"],
			"group": {
				"kind": "build"
			},
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": "$gcc"
		}
	]
}